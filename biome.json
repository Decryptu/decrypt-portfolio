{
	"$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"ignore": ["node_modules", ".next", ".contentlayer", "dist", "**/*.mdx"],
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": ["node_modules", ".next", ".contentlayer", "dist", "**/*.mdx"],
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 80
	},
	"files": {
		"ignore": ["node_modules", ".next", ".contentlayer", "dist", "**/*.mdx"]
	}
}
